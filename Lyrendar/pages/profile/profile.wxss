.profile-container {
    padding: 16px;
  }
  
  .user-info {
    display: flex;
    align-items: center;
    margin-bottom: 24px;
  }
  
  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 40px;
    margin-right: 16px;
  }
  
  .nickname {
    font-size: 18px;
    font-weight: bold;
  }
  
  .history-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 16px;
  }